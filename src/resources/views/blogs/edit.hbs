<div class="mt-4">
  <h3>Cập nhập khóa học</h3>
  <form class="mt-4" method="POST" action="/blogs/{{blog._id}}?_method=PUT">
    <div class="mb-3">
      <label for="search-input" class="form-label">Blog name</label>
      <input type="text" name="name" value="{{blog.name}}" class="form-control" id="name" />
    </div>
    <div class="mb-3">
      <label for="search-input" class="form-label">Mô tả Blog</label>
      <textarea
        type="text"
        name="description"
        class="form-control"
        id="description"
      >{{blog.description}}</textarea>
    </div>
    <div class="mb-3">
      <label for="search-input" class="form-label">Blog Level</label>
      <input type="text" name="level" value="{{blog.level}}" class="form-control" id="level" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>